/* INPUT PINS */
PIN [2..5]=[A0..3];
PIN [6..9]=[B0..3];

/* OUTPUT PIN */
PIN [14..17]=[S0..3];
PIN [18..20]=[C0..2];

function suma4bits(A,B,Cin,CA){
    CA = (A & B) # (A & Cin) # (B & Cin);
    suma4bits = A $ B $ Cin;
}

S0=suma4bits(A0,B0,'b'0,C0);
S1=suma4bits(A1,B1,C0,C1);
S2=suma4bits(A2,B2,C1,C2);
S3=suma4bits(A3,B3,C2,Count);
